		"terser": "^5.39.0"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.5",
		"@types/express": "^5.0.0",
		"@types/node": "^22.13.10",
		"@types/node-wit": "^6.1.0",
		"dotenv": "^16.4.7",
		"ngrok": "5.0.0-beta.2",
		"typescript": "^5.8.2",
		"vercel": "^41.4.0"
	}
